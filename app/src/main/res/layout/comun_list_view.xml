<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/comun_layout"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/branco"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:textColor="@color/branco"
            android:background="@drawable/circle"
            android:gravity="center"
            tools:text="Img"
            />

        <TextView
            android:id="@+id/nome_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/img"
            android:textColor="#333333"
            android:textSize="18sp"
            tools:text="loja: Jonis vitor Ferreira silva" />

        <TextView
            android:id="@+id/cnpj_admin"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_admin"
            android:layout_alignStart="@id/nome_admin"
            android:textColor="#333333"
            android:textSize="16sp"
            tools:text="CNPJ: 738.034.455-45" />

        <TextView
            android:id="@+id/local_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cnpj_admin"
            android:layout_alignStart="@id/nome_admin"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginEnd="24dp"
            tools:text="Localização: " />


    </RelativeLayout>

</androidx.cardview.widget.CardView>